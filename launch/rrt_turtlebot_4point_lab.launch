<launch>
  <!-- Arguments -->
  <arg name="model" default="waffle_pi"/>
  <arg name="map_file" default="$(find rrt_planner)/maps/grupo18.yaml"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="cmd_vel_topic" default="/cmd_vel"/>
  <arg name="odom_topic" default="odom"/>

  <!-- Turtlebot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)"/>
  </include>

  <!-- Gazebo (only runs if computer is connected to localhost) -->
  <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_empty_world.launch">
    <if value="$(env ROS_MASTER_URI) == http://localhost:11311" />
  </include>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find turtlebot3_navigation)/launch/amcl.launch">
    <arg name="initial_pose_x" default="2.3752965927124023"/>
    <arg name="initial_pose_y" default="2.1014506816864014"/>
    <arg name="initial_pose_a" default="-1.3523312807083128"/>
  </include>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <param name="base_global_planner" value="rrt_planner/RRTPlannerROS"/>
    <rosparam file="$(find rrt_planner)/config/rrt_planner.yaml" command="load"/>

    <rosparam file="$(find rrt_planner)/param/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find rrt_planner)/param/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find rrt_planner)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find rrt_planner)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find rrt_planner)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find rrt_planner)/param/dwa_local_planner_params_$(arg model).yaml" command="load" />

    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)"/>
    <param name="planner_frequency" value="0.0" />

    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
  </node>

  <!-- rviz -->
  <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find rrt_planner)/rviz/rrt_turtlebot_sim.rviz"/>

  <!-- Goal Publisher (Python script node) -->  
  <node pkg="rrt_planner" type="goal_publisher.py" name="goal_publisher" output="screen">
    <!-- Goals take the form of [x, y, Î¸] or [x, y, qz, qw] -->
    <param name="goal_list" value="[
      (2.5867199897766113, 1.926358699798584, -0.6452002540628567, 0.7640135026013776),
      (3.2087318897247314, -1.650550365447998, 0.8096074266721554, 0.5869717324346128),
      (-2.3282997608184814, -2.214787721633911, 0.720515688571733, 0.6934386364502642),
      (0.17406821250915527, -2.7023749351501465, -0.6122330393467115, 0.7906773713293482)
    ]" />
    <param name="start_delay" value="15" />  
  </node>
</launch>
